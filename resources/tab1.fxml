<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox fx:controller="sample.controllers.Tab1"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@style.css"
      styleClass="tabContent">
    <!-- The "@" symbol means the style sheet is in the same directory as the FXML file -->
    <!-- @see https://www.callicoder.com/javafx-css-tutorial -->

    <Label text="Hello"/>
    <Button text="Change text"/>

    <TextArea fx:id="textArea"
              editable="false"
              styleClass="shellTextArea"/>

</VBox>
